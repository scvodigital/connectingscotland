<body class="{{#if request.params.path}}{{replace request.params.path '_' ' '}}{{else}}home{{/if}} {{@root.route.name}}">
  {{!-- <div class=" hide-sm hide-md">
    {{> components_scvo_bar}}
  </div> --}}
  <main>
    <header class="navbar header">
      <div class="container">
        <div class="navbar-section navbar-header">
          <span class="navbar__title catalog-title">
            <a href="/" class="brand-logo" title="Connecting Scotland"><span class="hidden">Connecting Scotland</span></a>
          </span>
          <nav id="main-tab-bar" class="mdc-tab-bar t-margin-full t-padding-full hide-lg pull-right" [menu]="'main'" [menulinkselector]="''" [menulabelselector]="'span.mdc-tab--label'" [menuactiveclass]="'active'">
            <ul>
              {{#each (getProperty @root.context.metaData.menus @root.data.currentSite.name) ~}}
              <li><a class="mdc-tab{{#ifAll (compare label 'Home') (compare @root.request.url.pathname '/')}} mdc-tab--active{{else}}{{#if (regexMatch @root.request.url.pathname (replace route '$' '') 'gi')}} mdc-tab--active{{/if}}{{/ifAll}}" href="{{path}}"><span class="mdc-tab--label">{{{label}}}</span></a></li>
              {{/each ~}}
            </ul>
          </nav>
          <div class="mobile-header-buttons show-lg pull-right">
            <a href="javascript:void(0);" class="btn btn-link no-margin" aria-expanded="false" id="menu" onclick="toggle('mobile-menu', 'menu')" aria-label="Open navigation menu" title="Open navigation menu" data-component="TasksTrigger"
              data-TasksTrigger='{
                click: {
                  tasks: [
                    {
                      type: "elementManipulator",
                      config: {
                        ".mobile-menu": {
                          "removeClass": "mobile-menu_closed mobile-menu_closing",
                          "addClass": "mobile-menu_open"
                        }
                      }
                    }
                  ]
                }
              }'>
              <span class="far fa-bars fa-2x" aria-hidden="true"></span>
            </a>
          </div>
        </div>
      </div>
    </header>

    <div id="mobile-menu" class="mobile-menu mobile-menu_closed">
      <aside class="mobile-contents sidebar">
        <header class="navbar header">
          <div class="navbar-section pull-left">
            <span class="navbar__title h-padding catalog-title">
              <a href="/" class="brand-logo">&nbsp;</a>
            </span>
          </div>
          <div class="navbar-section">
            <div class="mobile-header-buttons">
              <a href="javascript:void(0);" class="btn btn-link no-margin" onclick="toggle('mobile-menu', 'menu')" aria-label="Close navigation menu" title="Close navigation menu" data-component="TasksTrigger" data-TasksTrigger='{
                  click: {
                    tasks: [
                      {
                        type: "elementManipulator",
                        config: {
                          ".mobile-menu": {
                            removeClass: "mobile-menu_open",
                            addClass: "mobile-menu_closing"
                          }
                        }
                      },
                      {
                        type: "delay",
                        config: {
                          "200": [
                            {
                              type: "elementManipulator",
                              config: {
                                ".mobile-menu": {
                                  addClass: "mobile-menu_closed",
                                  removeClass: "mobile-menu_closing"
                                }
                              }
                            }
                          ]
                        }
                      }
                    ]
                  }
                }'>
                <span class="far fa-times text-white fa-2x" aria-hidden="true"></span>
              </a>
            </div>
          </div>
        </header>
        <div class="b-margin-full v-padding-full">
          <ul class="menu b-padding-full">
            {{#each (getProperty @root.context.metaData.menus @root.data.currentSite.name) ~}}
            <li class="menu-item">
              <a href="{{stripTrailingSlash path}}" class="{{#if (regexMatch @root.request.url.pathname route 'gi')}} active{{/if}}">
                {{#if icon ~}}
                <span class="far fa-fw fa-{{icon}}" aria-hidden="true"></span>
                {{/if ~}}
                {{{label}}}
              </a>
            </li>
            {{/each ~}}
          </ul>
          {{!-- <h5 class="x-padding">Our sites</h5>
          {{> components_scvo_bar}} --}}
        </div>
      </aside>
    </div>

    <div class="container">
      <div class="body-content">
        {{{layoutParts.header}}}
        <section class="main">
          {{{layoutParts.body}}}
        </section>
      </div>
    </div>
  </main>

  <footer>
    <div class="footer-main">
      <div class="container">
        <h1 class="hidden">Footer</h1>
        <div class="columns">
          <div class="column col-3 col-md-6 col-sm-12">
            <h2>Contact</h2>
            <ul class="fa-ul">
              <li>
                <span class="fa-li"><span class="fas fa-envelope" aria-hidden="true"></span></span>
                <a href="mailto:help@connecting.scot">help@connecting.scot</a>
              </li>
              <li>
                <span class="fa-li"><span class="fab fa-twitter" aria-hidden="true"></span></span>
                <a href="https://twitter.com/digiscot" rel="noopener">Twitter</a>
              </li>
            </ul>
          </div>
          <div class="column col-3 col-md-6 col-sm-12">
            <h2>Help</h2>
            <ul>
              <li>
                <a href="/site-accessibility">Accessibility</a>
              </li>
              <li>
                <a href="/privacy">Privacy</a>
              </li>
              <li>
                <a href="/cookies">Cookies</a>
              </li>
              <li>
                <a href="/terms">Terms &amp; conditions</a>
              </li>
            </ul>
          </div>
          <div class="column col-6 col-md-12">
            <h2>About</h2>
            <p>
              {{#compare @root.data.currentSite.name "default" ~}}
              Connecting Scotland
              {{else}}
              <a href="https://connecting.scot">Connecting Scotland</a>
              {{/compare ~}}
              is a <a href="https://gov.scot">Scottish Government</a> initiative being managed by the <a href="https://scvo.org">Scottish Council for Voluntary Organisations</a>. <a href="/about">Find out more</a>
            </p>
            <p>
              <a href="/supporters">Programme supporters</a>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="footer-copyright">
      <div class="container">
        <div class="columns">
          <div class="column col-8 col-md-12">
            <p>
              &copy; {{momentFormat (moment) "YYYY"}}. The Scottish Council for Voluntary Organisations (SCVO) is a Scottish Charitable Incorporated Organisation.<br />Charity registered in Scotland <a href="https://www.oscr.org.uk/about-charities/search-the-register/charity-details?number=SC003558">SC003558</a>. Registered office Mansfield Traquair Centre, 15 Mansfield Place, Edinburgh EH3&nbsp;6BB.
            </p>
          </div>
          <div class="column col-4 col-md-12">
            <a href="https://www.gov.scot/policies/digital" class="brand">
              <img src="{{~>asset_url url='images/logos/SG_Quaternary_govscot_RGB_reversed.png'~}}" alt="Scottish Government"  class="logo sg" />
            </a>
            <a href="https://scvo.org" title="Scottish Council for Voluntary Organisations" class="brand">
              <img src="{{~>asset_url url='images/logos/scvo-white.svg'~}}" alt="Scottish Council for Voluntary Organisations" class="logo scvo" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </footer>

