{{#with @root.data.primaryResponse.hits.hits.[0]._source ~}}
<ul class="breadcrumb breadcrumb-length-{{breadcrumb.length}} breadcrumb-{{wpid}}" aria-hidden="true">
  <li class="breadcrumb-item"><a href="/">Home</a></li>
  {{#each breadcrumb ~}}
  {{#unless (compare title "Connecting Scotland")}}
  <li class="breadcrumb-item"><a href="{{replace (replace (replace (replace url '/connecting-scotland' '') 'http://cms.scvo.org' '') 'https://cms.scvo.org' '') 'https://scvo.scot' ''}}">{{{striptags title}}}</a></li>
  {{/unless}}
  {{/each ~}}
  <li class="breadcrumb-item">{{{striptags title}}}</li>
</ul>
{{/with ~}}