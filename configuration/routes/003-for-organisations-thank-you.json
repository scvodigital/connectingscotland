{
  "name": "org_thank_you",
  "debug": true,
  "pattern": "/for-organisations/thank-you",
  "metaData": {
    "title": "Connecting Scotland"
  },
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "scvo-page",
          "template": ">context.metaData.handlebars.queries.page",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.header-page",
              "body": ">context.metaData.handlebars.templates.body-for-organisations-thank-you",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}